<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.mobileapp_working.ClassDetail"
    tools:showIn="@layout/activity_class_detail">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/class_detail_main_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/class_detail_term_number"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="Term #" />


        <TextView
            android:id="@+id/class_detail_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:hint="Class Name"
            android:inputType="text"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/class_detail_start"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:hint="Class Start Date"
            android:inputType="date"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/class_detail_end"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:hint="Class End"
            android:inputType="date"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/class_detail_status"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:hint="Class Status"
            android:textSize="15dp" />


        <!--<ListView-->
        <!--android:id="@+id/class_detail_assessment_dates"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="150dp">-->


        <!--</ListView>-->

        <TextView
            android:id="@+id/class_detail_course_mentor_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:hint="Course Mentor name" />

        <TextView
            android:id="@+id/class_detail_course_mentor_phone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:hint="Course Mentor phone" />

        <TextView
            android:id="@+id/class_detail_course_mentor_email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:hint="Course Mentor email" />

        <!--<include layout="@layout/assessment_layout"/>-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:text="Assessment List:"
            android:textAlignment="center"
            android:textStyle="bold" />

        <ListView

            android:id="@+id/class_detail_assessment_dates"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:minHeight="5dp" />


        <Button
            android:id="@+id/class_detail_notes_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:onClick="openNotesActivity"
            android:text="View/Add Note" />

        <Button
            android:id="@+id/class_detail_set_assessments_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:onClick="openSetAssessemntDate"
            android:text="Set Assessment" />

        <Button
            android:id="@+id/class_detail_set_alert_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:onClick="openAlertActivity"
            android:text="View/Set Alerts" />


    </LinearLayout>

    </ScrollView>

