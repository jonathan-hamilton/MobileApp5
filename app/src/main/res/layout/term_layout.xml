<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:descendantFocusability="blocksDescendants">

        <TextView
            android:id="@+id/class_add_term_number"
            android:layout_width="97dp"
            android:layout_height="40dp"
            android:layout_marginLeft="14dp"
            android:layout_weight="1"
            android:text="Term number"
            app:layout_constraintEnd_toStartOf="@+id/term_start"
            app:layout_constraintHorizontal_bias="0.117"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="4dp"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/term_start"
            android:layout_width="105dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Term start"
            app:layout_constraintEnd_toStartOf="@+id/term_end"
            android:textSize="20dp"
            tools:layout_editor_absoluteY="4dp" />

        <TextView
            android:id="@+id/term_end"
            android:layout_width="105dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Term end"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="20dp"
            tools:layout_editor_absoluteY="5dp" />

        <!--<CheckBox-->
            <!--android:id="@+id/term_listview_checkBox"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="1" />-->
    </LinearLayout>

</android.support.constraint.ConstraintLayout>